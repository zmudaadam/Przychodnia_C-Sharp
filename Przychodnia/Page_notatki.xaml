        <Button x:Name="btn_notatka_zapisz" TabIndex="4" Content="Zapisz" HorizontalAlignment="Left" Margin="14,116,0,0" VerticalAlignment="Top" Width="102" Height="30" Click="Btn_notatka_zapisz_Click" FontSize="16" Background="#FF2B7CD4" Foreground="White"/>
