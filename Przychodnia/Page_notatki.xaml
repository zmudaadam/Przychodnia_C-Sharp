        <DataGrid x:Name="datagrid_notatka" HorizontalAlignment="Left" Height="401" Margin="14,182,0,0" VerticalAlignment="Top" Width="1023"/>
        <Label Content="ID:" HorizontalAlignment="Left" Margin="14,6,0,0" VerticalAlignment="Top" Width="50" FontSize="14"/>
        <TextBox x:Name="txt_notatka_ID" TabIndex="1" HorizontalAlignment="Left" Height="25" Margin="69,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="146"/>
        <TextBox x:Name="txt_notatka_szukaj" TabIndex="8" HorizontalAlignment="Left" Height="30" Margin="820,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" FontSize="14"/>
        <ComboBox x:Name="combo_notatka_szukaj" TabIndex="9" HorizontalAlignment="Left" Margin="820,146,0,0" VerticalAlignment="Top" Width="128" Height="29">
            <ComboBoxItem Content="ID" HorizontalAlignment="Left" Width="118.208955223881"/>
            <ComboBoxItem Content="Temat" HorizontalAlignment="Left" Width="118.208955223881"/>
            <ComboBoxItem Content="Notatka" HorizontalAlignment="Left" Width="118.208955223881"/>
        </ComboBox>
        <Button x:Name="btn_notatka_odswiez" TabIndex="11" Content="Odśwież tabelę" HorizontalAlignment="Left" Margin="14,160,0,0" VerticalAlignment="Top" Width="113" Background="#FF2B7CD4" FontSize="14" Foreground="White" Click="Btn_notatka_odswiez_Click"/>
        <Label Content="Wpisz szukane słowo" HorizontalAlignment="Left" Margin="692,113,0,0" VerticalAlignment="Top" Width="123"/>
        <Label Content="Wybierz kategorię" HorizontalAlignment="Left" Margin="709,147,0,0" VerticalAlignment="Top"/>
