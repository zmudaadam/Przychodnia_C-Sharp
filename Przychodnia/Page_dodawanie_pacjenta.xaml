        <DataGrid x:Name="datagrid_pacjenci" Grid.Column="1" Height="269"  Width="209" Margin="224.119,195,227.418,170.746"/>
        <Button x:Name="btn_rejestracja_anuluj" Grid.Column="1" TabIndex="18" Content="Wyczyść" HorizontalAlignment="Left" Margin="331.119,149,0,0" VerticalAlignment="Top" Width="102" Height="27" Background="#FF2B7CD4" FontSize="16" Foreground="White" Click="Btn_rejestracja_anuluj_Click"/>
    </Grid>
</Page>