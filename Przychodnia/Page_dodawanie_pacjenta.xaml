<Page x:Class="Przychodnia.Page_dodawanie_pacjenta"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Przychodnia"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page_dodawanie_pacjenta" Background="LightGray" Height="635" Width="1067">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Label Content="ID" Grid.Column="1" HorizontalAlignment="Left" Margin="221.119,40,0,0" VerticalAlignment="Top" Width="87" FontSize="18"/>
        <Label Content="Imię" Grid.Column="1" HorizontalAlignment="Left" Margin="221.119,71,0,0" VerticalAlignment="Top" Width="87" FontSize="18"/>
        <Label Content="Nazwisko" Grid.Column="1" HorizontalAlignment="Left" Margin="221.119,102,0,0" VerticalAlignment="Top" Width="87" FontSize="18"/>
        <Label Content="Dodaj nowego pacjenta" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Width="222"/>
        <TextBox x:Name="txt_rejestracja_ID" Grid.Column="1" TabIndex="0" HorizontalAlignment="Left" Height="23" Margin="313.119,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txt_rejestracja_imie" Grid.Column="1"  TabIndex="1" HorizontalAlignment="Left" Height="23" Margin="313.119,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
